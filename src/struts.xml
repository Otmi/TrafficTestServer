<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
	"http://struts.apache.org/dtds/struts-2.0.dtd">
<!-- 指定Struts 2配置文件的根元素 -->
<struts>
	<!-- 所有的Action定义都应该放在package下 -->
	<package name="com.xulingjue.traffictestserver.servlet" extends="struts-default">
		<action name="login" class="com.xulingjue.traffictestserver.servlet.QuestionAddAction">
			<!-- 定义三个逻辑视图和物理资源之间的映射 -->		
			<result name="Question/add">/add.jsp</result>
		</action>
	</package>
</struts>