<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping
	PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.xulingjue.traffictestserver.servlet.dao">
	<class name="Question" table="question">
		<!-- 映射标识属性 -->
		<id name="id" column="questionid">
			<!-- 指定主键生成器策略 -->
			<generator class="increment"/>
		</id>
		<!-- 问题内容 -->
		<property name="content" column="content" type="string"/>
		<!-- 问题图片 -->
		<property name="img" column="img" type="string"/>
		<!-- 映射数组属性 -->
		<set name="selections" table="selection">
			<!-- 映射集合属性数据表的外键列 -->
			<key column="questionid"/>
			<one-to-many class="com.xulingjue.traffictestserver.servlet.dao.Selection"/>  
		</set>
	</class>
</hibernate-mapping>